@model IEnumerable<Code2Night.DAL.Common.Article>
@{
    ViewData["Title"] = "Article";

}


<section class="main-container" style="margin-top: 0px;">

    <div class="container">
        <div class="row">

            <!-- sidebar start -->
            @if (Model.Count() > 0)
            {
            <aside class="col-md-3">
                <div class="sidebar">
                    <div class="block clearfix">
                        
                        <h3 class="title">@Model.FirstOrDefault()?.Topictitle</h3>
                        <div class="separator"></div>
                        <nav>
                            <ul class="nav nav-pills nav-stacked">
                                @foreach (var item in Model)
                                {
                                    <li ><a class="article" onclick="fetchArticle(@item.articleid)">@item.articletitle</a></li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </aside>
            }
            else
            {
                <h1 style="text-align:center">Sorry ! No Articles Found</h1>
            }
            <!-- sidebar end -->
            <!-- main start -->
            <!-- ================ -->
            <div class="main col-md-8 col-md-offset-1" id="Articlespartialid">
    
            </div>
            <!-- main end -->

        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $('.article').first().click();

    })
    var fetchArticle = function (id) {
          LoadPartialView('@Url.Action("ArticleDetail", "Tutorials")', "Articlespartialid", {id:id});
    }


</script>
