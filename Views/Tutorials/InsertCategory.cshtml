
@{
    ViewData["Title"] = "InsertCategory";

}

<section class="main-container" style="margin-top: 0px;">

    <div class="container">
        <div class="row">

            <!-- main start -->
            <!-- ================ -->
            <div class="main object-non-visible animated object-visible fadeInDownSmall" data-animation-effect="fadeInDownSmall" data-effect-delay="300">
                <div class="form-block center-block">
                    <h2 class="title">Insert Category</h2>
                    <hr>
                    <div class="form-horizontal">
                        <div class="form-group has-feedback">
                            <label for="inputName" class="col-sm-3 control-label">Category Name <span class="text-danger small">*</span></label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="CategoryName" placeholder="Category Name" required="">
                                <i class="fa fa-pencil form-control-feedback"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-8">
                                <input type="submit" name="buttonsubmit" id="InsertCategory" onclick="InsertCategory()" class="btn btn-default" style="background-color:#a81919" value="Insert Category">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- main end -->

        </div>
    </div>
</section>
<script>


    $(function () {
        $("#InsertCategory").click(function () {
            debugger;
            $.ajax({
                type: "POST",
                url: "/Tutorials/InsertCategory",
                data: { "categoryname": $("#CategoryName").val() },
                success: function (response) {
                    debugger;
                    $("#CategoryName").val() = "";
                   
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        });
    });





</script>