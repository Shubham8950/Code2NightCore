@model Code2Night.Models.AritclesModel
@{
    ViewData["Title"] = "Articles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script type="text/javascript" src="/plugins/jquery.min.js"></script>
<section class="main-container" style="        margin-top: 0px;
        width: 100%
">

    <div class="container">
        <div class="row">
            <div class="" style="width:100%">
                <h2 class="title">Topics</h2>
                <hr>
                <div class="form-horizontal">
                    @using (Html.BeginForm("SaveArticle", "Category", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        <div class="col-md-12" style="display:flex">
                            <div class="col-md-4">
                                <label for="categoryid" class="col-sm-3 control-label">Topic<span class="text-danger small">*</span></label>
                                @Html.DropDownListFor(x => x.ArticleDetails.topicid, new SelectList(Model.GetTopicsTitle, "topicid", "title"), new { @class = "form-control" })
                            </div>
                            <div class="col-md-4">
                                <label for="categoryid" class="col-sm-4 control-label">Article Title<span class="text-danger small">*</span></label>
                                @Html.TextBoxFor(x => x.ArticleDetails.articletitle, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4">
                                <label for="categoryid" class="col-sm-5 control-label">Introduction<span class="text-danger small">*</span></label>
                                @Html.TextBoxFor(x => x.ArticleDetails.topicArticleIntroduction, new { @class = "form-control" })
                            </div>

                        </div>
                        <div class="col-md-12" style="display:flex">
                            <div class="col-md-4">
                                <label for="categoryid" class="col-sm-6 control-label">Article Body<span class="text-danger small">*</span></label>
                                @Html.TextBoxFor(x => x.ArticleDetails.ArticleBody, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4">
                                <label for="categoryid" class="col-sm-6 control-label">Article Url<span class="text-danger small">*</span></label>
                                @Html.TextBoxFor(x => x.ArticleDetails.articleurl, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group has-feedback" style="display:flex">
                            <div class="col-md-4 col-sm-12">
                                <div class="col-md-12 col-sm-12"> <input type="submit" style="margin-top:31px;" name="buttonsubmit" id="InsertCategory" onclick="InsertCategory()" class="btn btn-primary" value="Save"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- main end -->

        </div>
    </div>
</section>
<div class="card-body p-0">
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th style="width: 1%">
                    #
                </th>
                <th style="width: 15%">
                    Article Title
                </th>
                <th style="width: 15%">
                    Article Introduction
                </th>
                <th style="width: 15%">
                    Article ArticleBody
                </th>

                <th style="width: 20%">
                    Article Url
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.GetArticles)
            {
                <tr>
                    <td>
                        @item.articleid
                    </td>
                    <td>
                        @item.articletitle
                    </td>
                    <td>
                        @item.topicArticleIntroduction
                    </td>
                    <td>
                        @item.ArticleBody
                    </td>
                    <td>
                        @item.articleurl
                    </td>
                    <td class="project-actions text-right">
                        <a class="btn btn-danger btn-sm" href='@Url.Action("DeleteArticle", "Category", new { id = item.articleid })'>
                            <i class="fas fa-trash">
                            </i>
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
