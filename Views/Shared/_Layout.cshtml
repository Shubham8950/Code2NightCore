    <title>@ViewBag.Title</title>
    <link href="../plugins/summernote/summernote.min.css" rel="stylesheet" />
    @if (!string.IsNullOrEmpty(Convert.ToString(ViewBag.MetaDescription)))
    {
        <meta name="description" content="@ViewBag.MetaDescription" />
    }
    else
    {
        <meta name="description" content="Welcome To Code2night, check out lur latest programming blogs with detailed description to help you out" />
    }
    @if (!string.IsNullOrEmpty(Convert.ToString(ViewBag.MetaKeywords)))
    {
        <meta name="keywords" content="@ViewBag.MetaKeywords" />
    }
    else
    {
        <meta name="keywords" content="Code2Night,Blogs,Stripe,Slick,MVC,Exception Handling,Code,Programming,Tutotials,Slick Slider,IIS,Internet Information Services" />
    }
    @if (!string.IsNullOrEmpty(Convert.ToString(ViewBag.Canonical)))
    {
        <link rel="canonical" href="@ViewBag.Canonical" />
    }
    else
    {
        <link rel="canonical" href="https://www.code2night.com/Blog/Index" />
    }
    @if (!string.IsNullOrEmpty(Convert.ToString(ViewBag.OpenGraphTitle)))
    {
        <meta property="og:title" content="@ViewBag.OpenGraphTitle">

    }
    else
    {
        <meta property="og:title" content="Code2night">

    }
    <meta property="og:site_name" content="Code2night">
    @if (!string.IsNullOrEmpty(Convert.ToString(ViewBag.OpenGraphUrl)))
    {
        <meta property="og:url" content="@ViewBag.OpenGraphUrl">
    }
    else
    {
        <meta property="og:url" content="https://www.code2night.com/">
    }
    @if (!string.IsNullOrEmpty(Convert.ToString(ViewBag.OpenGraphDescription)))
    {
        <meta property="og:description" content="@ViewBag.OpenGraphDescription">
    }
    else
    {
        <meta property="og:description" content="Welcome To Code2night, A common place for sharing your programming knowledge,Blogs and Videos">
    }
    <meta property="og:type" content="article">
    <meta property="og:image" content="https://www.code2night.com/Content/images/logo_2.png">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/Content/images/favicon.ico">
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
