    <script>
function LoadPartialView(url, elem, postData) {

            $.post(url, postData, function (result, status) {
                $("#" + elem).html('');
                $("#" + elem).html(result);

            });
        }
        $(document).ready(function () {
           LoadPartialView('@Url.Action("TagsList", "Blog")', "tagslist", {});
        })
    </script>
